# Production Environment Variables
# Copy this file to .env.production.local for production deployment

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL="https://your-production-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"

# Database (Supabase Production PostgreSQL)
DATABASE_URL="postgresql://postgres.your-production-project-ref:password@aws-0-region.pooler.supabase.com:6543/postgres"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VERCEL_ANALYTICS_ID="your_analytics_id"

# App Configuration
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
NEXT_PUBLIC_API_URL="https://yourdomain.com/api"

# File Upload (UploadThing)
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Optional: PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"