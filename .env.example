# ShipFast Environment Variables
# Copy this file to .env.local and update with your actual values
# Documentation: https://shipfast.dev/docs/environment-variables

# ============================================
# REQUIRED VARIABLES
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.your-project-ref:password@aws-0-region.pooler.supabase.com:6543/postgres"
DIRECT_URL="postgresql://postgres.your-project-ref:password@aws-0-region.pooler.supabase.com:5432/postgres"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ============================================
# AUTHENTICATION
# ============================================

# NextAuth.js (if using NextAuth instead of Supabase Auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-32-character-secret-here"

# OAuth Providers (optional)
GITHUB_ID=""
GITHUB_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ============================================
# EMAIL SERVICE
# ============================================

# Resend (recommended)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# PAYMENT PROCESSING
# ============================================

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# Stripe Products/Prices (update with your actual IDs)
STRIPE_PRICE_ID_STARTER="price_starter_monthly"
STRIPE_PRICE_ID_PRO="price_pro_monthly"

# ============================================
# RATE LIMITING & CACHING
# ============================================

# Upstash Redis
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ============================================
# FILE STORAGE
# ============================================

# UploadThing (optional)
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Cloudinary (optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ============================================
# ANALYTICS & MONITORING
# ============================================

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# ============================================
# AI/ML SERVICES (optional)
# ============================================

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic
ANTHROPIC_API_KEY=""

# ============================================
# FEATURE FLAGS
# ============================================

NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_STRIPE="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_REALTIME="true"

# ============================================
# DEVELOPMENT & DEPLOYMENT
# ============================================

# Environment
NODE_ENV="development"
NEXT_PUBLIC_VERCEL_ENV="development"
VERCEL_URL="http://localhost:3000"

# Development Tools
DEVICE_NAME="My Development Machine"
FORCE_COLOR="1"
DEBUG="app:*"

# Build Configuration
NEXT_TELEMETRY_DISABLED="1"
ANALYZE="false"

# ============================================
# SECURITY
# ============================================

# Content Security Policy
CSP_REPORT_URI=""

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE="60"
API_RATE_LIMIT_PER_HOUR="1000"